<%= render "devise/shared/header" %>
<%# breadcrumb :user%>
<%= render "layouts/breadcrumb"%>
<%= render "users/user_tab"%><br>

<% @clips.each do |clip|%>
  <% if clip.shop.images.present?%>
    <%= image_tag clip.shop.images[0].variant(resize: '300x300')%>
  <% else %>
    <%= image_tag "no_image.jpg"%>
  <% end %><br>
  <%= clip.shop.name%><br>
  <%= clip.shop.area.name%><br>
  <%= clip.shop.genre.name%><br>
  評価<%= clip.shop.reviews.average(:review_point)%><br>
  口コミ数<%= clip.shop.reviews.count%><br>
<% end %>
    

<%= render "devise/shared/footer" %>
