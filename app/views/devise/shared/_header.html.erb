<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <h1><%= link_to "WORK-SPACE", root_path %></h1>
  <div class='nav'>
    <ul class='lists-right'>
      <%if user_signed_in?%>
         <li><%= link_to "マイページ", user_path(current_user.id) %></li>
         <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>

  <%= form_with(url: search_shops_path, local: true, method: :get) do |f|%>
    <%= f.text_field :keyword, placeholder: "エリア[例: 梅田]"%>
    <%= f.text_field :keyword, placeholder: "キーワード[例: スターバックスコーヒー]"%>
    <%= f.submit "検索"%>
  <% end %>
</header>