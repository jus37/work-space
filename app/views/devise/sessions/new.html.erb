<div class="header">
  <%= render "devise/shared/header" %>
</div>
<div class="user-sign-in">
  <div class="breadcrumbs">
    <% breadcrumb :new_user_session%>
    <%= render "layouts/breadcrumb"%>
  </div>
  <div class="user">
    <div class="user-info">
      <p class="sign-in-title">ログイン</p>
      <div class="sign-up">
        <%= link_to "新規会員登録はこちら", new_registration_path(resource_name), class:"sign-up-btn"%>
      </div>
      <div class="test-sign-in">
        <%= link_to 'ゲストログイン(閲覧用)', users_guest_sign_in_path, method: :post, class:"test-btn"%>
      </div>
    </div>
    <div class="user-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="field-label">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="field-area">
            <%= f.email_field :email, autofocus: true, autocomplete: "off" %>
          </div>
          <div class="field-label">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="field-area">
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class:"sign-btn"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="footer">
  <%= render "devise/shared/footer" %>
</div>
