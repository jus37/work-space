<div class="header">
  <%= render "devise/shared/header" %>
</div>
<div class="user-sign-up">
  <div class="breadcrumbs">
    <% breadcrumb :new_user_registration%>
    <%= render "layouts/breadcrumb"%>
  </div>
  <div class="user">
    <div class="user-info">
      <p class="sign-up-title">新規会員登録</p>
      <div class="sign-in">
        <%= link_to "ログインはこちら", new_user_session_path, class:"sign-in-btn"%>
      </div>
      <div class="test-sign-in">
        <%= form_for(resource, as:resource_name, url: session_path(resource_name)) do |f|%>
          <% f.hidden_field :email, value: "test@com"%>
          <% f.hidden_field :password, value: "111111a"%>
          <%= f.submit "テストユーザーとしてログイン", class:"test-btn"%>
        <% end %>
      </div>
    </div>
    <div class="user-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), method: :post) do |f| %>
        <div class="field">
          <div class="field-label">
            <%= f.label :メールアドレス %>
          </div>
          <div class="field-area">
            <%= f.email_field :email, autofocus: true, autocomplete: "off" %>
          </div>
          <div class="field-label">
            <%= f.label :パスワード　※半角英数字6文字以上 %>
          </div>
          <div class="field-area">
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <div class="field-label">
            <%= f.label :パスワード（確認用） %>
          </div>
          <div class="field-area">
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
          <div class="field-label">
            <%= f.label :アカウント名 %>
          </div>
          <div class="field-area">
            <%= f.password_field :name, autocomplete: "off" %>
          </div>
          <div class="field-label">
            <%= f.label :電話番号 %>
          </div>
          <div class="field-area">
            <%= f.password_field :telephone, autocomplete: "off" %>
          </div>
        </div>

        <%# if devise_mapping.rememberable? %>
          <%# <div class="field"> %>
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
          <%# </div> %>
        <%# end %>

        <div class="actions">
          <%= f.submit "登録", class:"sign-btn"%>
        </div>
      <% end %>
    </div>
  </div>
<div class="footer">
  <%= render "devise/shared/footer" %>
</div>
