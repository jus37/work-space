<div class="header">
  <%= render "devise/shared/header" %>
</div>
<div class="shop-new-edit">
  <div class="breadcrumbs">
    <% breadcrumb :new_shop %>
    <%= render "layouts/breadcrumb"%>
  </div>
  <div class="shop-registration">
    <div class="title">
      <p>店舗登録ページ</p>
    </div>
    <div class="shop-forms">
      <%= form_with model:@shop, local: true do |f| %>
        <div class="shop-form">
          <%= f.label :name, "店舗名", class:"shop-label"%>
          <%= f.text_field :name, class:"shop-form-field"%>
        </div>
        <div class="shop-form">
          <%= f.label :title, "紹介タイトル", class:"shop-label" %>
          <%= f.text_field :title, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :content, "説明文", class:"shop-label" %>
          <%= f.text_area :content, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :open_hour, "営業時間", class:"shop-label" %>
          <%= f.text_field :open_hour, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :regular_holiday, "定休日", class:"shop-label" %>
          <%= f.text_field :regular_holiday, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :address, "住所", class:"shop-label" %>
          <%= f.text_field :address, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :nearest_station, "最寄り駅", class:"shop-label" %>
          <%= f.text_field :nearest_station, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :telephone, "お問い合わせ", class:"shop-label" %>
          <%= f.text_field :telephone, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :capacity, "総席数", class:"shop-label" %>
          <%= f.text_field :capacity, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :private_room, "個室", class:"shop-label" %>
          <%= f.text_field :private_room, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :wifi, "wi-fi", class:"shop-label" %>
          <%= f.text_field :wifi, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :power_supply, "電源", class:"shop-label" %>
          <%= f.text_field :power_supply, class:"shop-form-field" %>
        </div>
        <div class="shop-form">
          <%= f.label :area_id, "エリア", class:"shop-label" %>
          <%= f.collection_select(:area_id, Area.all, :id, :name, {include_blank: "選択してください"}, {class:"select-box", id:"item-category"}) %>
        </div>
        <div class="shop-form">
          <%= f.label :genre_id, "ジャンル", class:"shop-label" %>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {include_blank: "選択してください"}, {class:"select-box", id:"item-category"}) %>
        </div>
        <div class="shop-form shop-check">
          <div class="select-check-label">
            <%= f.label :characteristic_ids, "おすすめポイント", class:"shop-label" %>
          </div>
          <div class="select-check-shop">
            <%= f.collection_check_boxes(:characteristic_ids, Characteristic.all, :id, :name, {}, {class:"select-check-box", id:"item-category"}) %>
          </div>
        </div>
        <div class="shop-form">
          <%= f.label :image, "店舗イメージ1", class:"shop-label" %>
          <div id="shop-image"></div>
          <%= f.file_field :image, name: 'shop[images][]', id:"publish-shop-image" %>
        </div>
        <div class="shop-form">
          <%= f.label :image, "店舗イメージ2", class:"shop-label" %>
          <div id="shop-image"></div>
          <%= f.file_field :image, name: 'shop[images][]', id:"publish-shop-image" %>
        </div>
        <div class="shop-form">
          <%= f.label :image, "店舗イメージ3", class:"shop-label" %>
          <div id="shop-image"></div>
          <%= f.file_field :image, name: 'shop[images][]', id:"publish-shop-image" %>
        </div>
        <div class="shop-send">
          <%= f.submit "登録する" ,class:"shop-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="footer">
  <%= render "devise/shared/footer" %>
</div>
