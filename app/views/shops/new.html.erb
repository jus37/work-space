<div class="header">
  <%= render "devise/shared/header" %>
</div>
<div class="shop-new">
  <div class="breadcrumbs">
    <% breadcrumb :new_shop %>
    <%= render "layouts/breadcrumb"%>
  </div>
  <div class="shop-registration">
    <div class="title">
      <p>店舗登録ページ</p>
    </div>
    <div class="shop-forms">
      <%= form_with model:@shop, local: true do |f| %>
        <div class="shop-form">
          <%= f.label "店舗名", class:"shop-label"%>
          <%= f.text_field :name, class:"shop-form"%>
        </div>
        <div class="shop-form">
          <%= f.label "紹介タイトル", class:"shop-label" %>
          <%= f.text_field :title, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "説明文", class:"shop-label" %>
          <%= f.text_area :content, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "営業時間", class:"shop-label" %>
          <%= f.text_field :open_hour, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "定休日", class:"shop-label" %>
          <%= f.text_field :regular_holiday, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "住所", class:"shop-label" %>
          <%= f.text_field :address, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "最寄り駅", class:"shop-label" %>
          <%= f.text_field :nearest_station, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "お問い合わせ", class:"shop-label" %>
          <%= f.text_field :telephone, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "総席数", class:"shop-label" %>
          <%= f.text_field :capacity, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "個室", class:"shop-label" %>
          <%= f.text_field :private_room, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "wi-fi", class:"shop-label" %>
          <%= f.text_field :wifi, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "電源", class:"shop-label" %>
          <%= f.text_field :power_supply, class:"shop-form" %>
        </div>
        <div class="shop-form">
          <%= f.label "エリア", class:"shop-label" %>
          <%= f.collection_select(:area_id, Area.all, :id, :name, {include_blank: "選択してください"}, {class:"select-box", id:"item-category"}) %>
        </div>
        <div class="shop-form">
          <%= f.label "ジャンル", class:"shop-label" %>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {include_blank: "選択してください"}, {class:"select-box", id:"item-category"}) %>
        </div>
        <div class="shop-form">
          <%= f.label "おすすめポイント", class:"shop-label" %>
          <%= f.collection_check_boxes(:characteristic_ids, Characteristic.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        </div>
        <div class="shop-form">
          <%= f.label "店舗イメージ", class:"shop-label" %>
          <div id="shop-image"></div>
          <%= f.file_field :images, name: 'shop[images][]', id:"publish-shop-image" %>
        </div>
        <div class="shop-send">
          <%= f.submit "登録する" ,class:"shop-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="footer">
  <%= render "devise/shared/footer" %>
</div>
