<%= render "devise/shared/header" %>
<h1>お店登録ページ</h1>

<%= form_with model:@shop, local: true do |f| %>

  <%= render 'devise/shared/error_messages', model: f.object %>

  店舗名<br>
  <%= f.text_field :name %><br>
  タイトル<br>
  <%= f.text_field :title %><br>
  説明<br>
  <%= f.text_area :content %><br>
  営業時間<br>
  <%= f.text_field :open_hour %><br>
  休日<br>
  <%= f.text_field :regular_holiday %><br>
  住所<br>
  <%= f.text_field :address %><br>
  最寄り駅<br>
  <%= f.text_field :nearest_station %><br>
  電話番号<br>
  <%= f.text_field :telephone %><br>
  席数<br>
  <%= f.text_field :capacity %><br>
  個室の有無<br>
  <%= f.text_field :private_room %><br>
  wifi<br>
  <%= f.text_field :wifi %><br>
  電源<br>
  <%= f.text_field :power_supply %><br>
  エリア<br>
  <%= f.collection_select(:area_id, Area.all, :id, :name, {include_blank: "選択してください"}, {class:"select-box", id:"item-category"}) %><br>
  ジャンル<br>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, {include_blank: "選択してください"}, {class:"select-box", id:"item-category"}) %><br>
  こだわりポイント<br>
  <%= f.collection_check_boxes(:characteristic_ids, Characteristic.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %><br>
  店舗画像<br>
  <div id="shop-image"></div>
  <%= f.file_field :images, name: 'shop[images][]', id:"publish-shop-image" %><br>

  <%= f.submit "登録する" ,class:"sell-btn" %><br>
  <%=link_to 'もどる', root_path, class:"back-btn" %>

<% end %>

<%= render "devise/shared/footer" %>
