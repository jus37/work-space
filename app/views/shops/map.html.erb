<div class="header">
  <%= render "devise/shared/header" %>
</div>
<div class="shop-map">
  <div class="breadcrumbs">
    <% breadcrumb :map_shop%>
    <%= render "layouts/breadcrumb"%>
  </div>
  <div class="shop">
    <div class="shop-info">
      <%= render "shop_info"%>
    </div>
    <div class="g-map-area">
      <iframe style="border:0; width: 700px; height: 500px" src="https://www.google.com/maps/embed/v1/place?key=<%= ENV['GOOGLE_API_KEY'] %>&q=<%= @shop.address %>" allowfullscreen>
      </iframe>
    </div>
    <div class="shop-map">
      <table class="map-table">
        <tbody>
          <tr><th>住所</th><td><%=@shop.address%></td></tr>
          <tr><th>最寄り駅</th><td><%=@shop.nearest_station%></td></tr>
        </tbody>
      </table>
    </div>
    <div class="shop-content">
      <div class="shop-content-info">
          <%= render "shop_content"%>
      </div>
    </div>
  </div>
</div>

<div class="footer"> 
  <%= render "devise/shared/footer" %>
</div>
