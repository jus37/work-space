<%= render "devise/shared/header" %>
<%= render "shops/shop_info"%>

<%=link_to "口コミを投稿する", new_shop_review_path(@shop.id)%><br>

<h4>口コミ一覧</h4>
<%if @reviews.present?%>
  <% @reviews.each do |review|%>
    <%= image_tag review.user.image.variant(resize:'50x50')%>
    <%="#{review.user.name}さんの口コミ"%><br>
    <%= "評価：#{review.review_point}"%><br>
    <%= review.title%><br>
    <%= review.comment%><br>
    <%= "訪問日： #{review.date.year}/#{review.date.month}/#{review.date.day}"%><br>
  <% end %>
<% end %>
<%= render "devise/shared/footer" %>
